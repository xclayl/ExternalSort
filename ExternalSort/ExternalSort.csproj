<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>1.1.0-beta002</Version>
        <Title>ExternalSort</Title>
        <Authors>Clay Lenhart</Authors>
        <Description>Sorts data that is larger than available RAM.</Description>
        <Copyright>Copyright (c) Clay Lenhart 2024</Copyright>
        <RepositoryUrl>https://github.com/xclayl/ExternalSort</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>Sorting, External Sort</PackageTags>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Parquet.Net" Version="4.23.4" />
    </ItemGroup>
    <ItemGroup>
        <None Include="../readme.md" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>
